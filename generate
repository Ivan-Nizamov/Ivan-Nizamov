#!/usr/bin/env bash
# Simple wrapper to generate all sites

cd "$(dirname "$0")"

# Check if we're being asked to serve
if [[ "$1" == "serve" ]]; then
    echo "Starting local server at http://localhost:8000"
    nix-shell -p python3 --run "python3 -m http.server 8000"
else
    nix-shell -p python3 python3Packages.qrcode python3Packages.pillow --run "python3 generate_sites.py"
fi
